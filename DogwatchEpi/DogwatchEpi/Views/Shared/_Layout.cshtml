@model DogwatchEpi.Models.Pages.StandardPage
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
</head>
<body>

    <div>
        <link rel="stylesheet" type="text/css" href="~/Static/Globals.css" />

        @if (!Model.HideSiteHeader)
        {
            Html.RenderPartial("Header", Model);
        }
        @RenderBody()
        @if (!Model.HideSiteFooter)
        {
            Html.RenderPartial("Footer", Model);
        }
    </div>
<script src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js"></script>
</body>
</html>